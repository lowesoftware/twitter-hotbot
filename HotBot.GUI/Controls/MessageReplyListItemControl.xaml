<UserControl x:Class="HotBot.GUI.Controls.MessageReplyListItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border BorderThickness="1" CornerRadius="5" BorderBrush="Gray" Padding="3" Margin="3">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5 0" FontWeight="Bold">Id</TextBlock>
                <TextBlock Margin="5 0" Width="80" Name="textMessageResponseId"></TextBlock>

                <TextBlock Margin="5 0" FontWeight="Bold">Sent</TextBlock>
            <TextBlock Margin="5 0" Width="120" Name="textPublished"></TextBlock>
            
            <TextBlock Margin="5 0" FontWeight="Bold">Original Author</TextBlock>
            <TextBlock Margin="5 0" Width="150" Name="textAuthor"></TextBlock>
                    </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5 0" FontWeight="Bold" Width="110">Original Message</TextBlock>
            <TextBlock Margin="5 0" Name="textOriginal" TextWrapping="Wrap" ></TextBlock>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5 0" FontWeight="Bold" Width="110">Reply Message</TextBlock>
            <TextBlock Margin="5 0" Name="textReply" TextWrapping="Wrap" ></TextBlock>
        </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
