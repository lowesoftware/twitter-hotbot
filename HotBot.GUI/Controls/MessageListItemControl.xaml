<UserControl x:Class="HotBot.GUI.Controls.MessageListItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border BorderThickness="1" CornerRadius="5" BorderBrush="Gray" Padding="3" Margin="3">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
                <TextBlock Margin="5 0" FontWeight="Bold">Id</TextBlock>
                <TextBlock Margin="5 0" Width="80" Name="textMessageId"></TextBlock>

                <TextBlock Margin="5 0" FontWeight="Bold">Published</TextBlock>
            <TextBlock Margin="5 0" Width="120" Name="textPublished"></TextBlock>
            
            <TextBlock Margin="5 0" FontWeight="Bold">Author</TextBlock>
            <TextBlock Margin="5 0" Width="150" Name="textAuthor"></TextBlock>
            
            <TextBlock Margin="5 0" FontWeight="Bold">IsMatch</TextBlock>
            <TextBlock Margin="5 0" Width="80" Name="textIsMatch"></TextBlock>
            <TextBlock Margin="5 0" FontWeight="Bold">MatchScore</TextBlock>
            <TextBlock Margin="5 0" Width="80" Name="textMatchScore"></TextBlock>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5 0" FontWeight="Bold">Body</TextBlock>
            <TextBlock Margin="5 0" Name="textBody" TextWrapping="Wrap" ></TextBlock>
        </StackPanel>
    </StackPanel>
    </Border>
</UserControl>
